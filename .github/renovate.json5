{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  labels: [
    'dependencies',
  ],
  schedule: [
    '* 0-5 1 * *',
  ],
  lockFileMaintenance: {
    enabled: true,
  },
  pep723: {
    managerFilePatterns: [
      '/scripts/*.py/',
    ],
  },
  ignoreDeps: [
    'python',
  ],
}
